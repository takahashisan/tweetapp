<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <% if post.image? %>
    　<td><%=  image_tag post.image.url%></td>
    　<% else %>
    　<td><%= image_tag 'noimage.gif' %></td>
    　<% end %>
      <td><%= link_to post.body, post_path(post) %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
